{% if data.info %}
  <div>
    <h2> Please configure your app with the relevant info provided by paypal.</h2>
    <span> Message : {{ data.info }} .</span>
  </div>
{% else  %}
  <script
          src="https://www.paypal.com/sdk/js?client-id={{ data['client_id'] }}"> // Required. Replace SB_CLIENT_ID with your sandbox client ID.
  </script>


  {{ data.amount }} {{ data.currency }}
  <div id="paypal-button-container"></div>
  <div> HELLO THERE</div>
  <div> {{ dump(data) }}</div>

  //
  <script>
    paypal.Buttons({
      createOrder: function(data, actions) {
        // This function sets up the details of the transaction, including the amount and line item details.
        return actions.order.create({
          intent: 'CAPTURE',
          purchase_units: [{
            amount: {
              value: '{{ data['amount'] }}',
            }
          }]
        });
      },
      onApprove: function(data, actions) {
        // This function captures the funds from the transaction.
        return actions.order.capture().then(function(details) {
          // This function shows a transaction success message to your buyer.
          //alert('Transaction completed by ' + details.payer.name.given_name);
          window.location = "?&for_node={{ data['nid'] }}&order_id="+data.orderID+"&type=pp_rq"
        });
      }
    }).render('#paypal-button-container');
    //This function displays Smart Payment Buttons on your web page.
  </script>
{% endif  %}